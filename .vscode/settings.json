{
    // settings.json for C/C++
    "editor.suggestSelection": "first",
    "window.zoomLevel": 1,
    "git.ignoreLegacyWarning": true,

    // 文件关联 - 添加汇编支持
    "files.associations": {
        "*.h": "c",
        "*.c": "c",
        "*.cxx": "cpp",
        "*.cpp": "cpp",
        "*.s": "assembly",
        "*.asm": "assembly",
        "*.cx": "cpp",
        "*.hx": "cpp"
    },

    /////////////////////////////////////////////
    // 终端配置 - Windows (MinGW64)
    "terminal.integrated.profiles.windows": {
        "MINGW64": {
            "path": [
                "${env:MSYS2_ROOT_BASH}/usr/bin/bash.exe"
            ],
            "icon": "terminal-bash",
            "args": [
                "--login"
            ],
            "env": {
                "MSYSTEM": "MINGW64",
                "MSYS2_PATH_TYPE": "inherit",
                "CHERE_INVOKING": "1",
                "CONTITLE": "MinGW x64",
                "C_INCLUDE_PATH": "/mingw64/include",
                "CPLUS_INCLUDE_PATH": "/mingw64/include",
                // 开发纯 Windows 应用时使用 MinGW 库: /mingw64/lib
                // 开发 POSIX 兼容应用时使用 MSYS2 库: /usr/lib
                "LIBRARY_PATH": "/mingw64/lib:/usr/lib",

                // THE FOLLOWING IS A HACK TO PLACE THE MSYS PATHS BEFORE THE WINDOWS ONES
                "PATH": "/mingw64/bin:/usr/bin:${env:PATH}"
            }
        }
    },
    "terminal.integrated.defaultProfile.windows": "MINGW64",
    /////////////////////////////////////////////

    /////////////////////////////////////////////
    // 终端配置 - Linux/WSL
    "terminal.integrated.env.linux": {
        "PATH": "${env:PATH}:/usr/bin"
    },
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "/usr/bin/bash"
        }
    },
    "terminal.integrated.defaultProfile.linux": "bash",
    /////////////////////////////////////////////

    /////////////////////////////////////////////
    // 终端配置 - macOS
    "terminal.integrated.env.osx": {
        "PATH": "${env:PATH}:/usr/bin"
    },
    "terminal.integrated.profiles.osx": {
        "bash": {
            "path": "/usr/bin/bash"
        }
    },
    "terminal.integrated.defaultProfile.osx": "bash",
    /////////////////////////////////////////////

    // 终端配置 - 共同设置
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.rightClickBehavior": "default",
    "terminal.integrated.allowChords": false,
    "terminal.integrated.showExitAlert": false,

    // C/C++特定设置
    "[c]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": null,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true
    },
    "[cpp]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": null,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true
    },

    // 汇编特定设置
    "[assembly]": {
        "editor.formatOnSave": true,
        // "editor.defaultFormatter": "13xforever.language-x86-64-assembly",
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true
    },

    // 调试设置
    "debug.internalConsoleOptions": "neverOpen",
    "debug.allowBreakpointsEverywhere": true
}